{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI Backend",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--port",
                "8070",
                "--reload",
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "simulator_ui",
            "cwd": "simulator_ui",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "simulator_ui (Chrome)",
            "cwd": "simulator_ui",
            "request": "launch",
            "type": "dart",
            "args": ["-d", "chrome"]
        },
        {
            "name": "simulator_ui (profile mode)",
            "cwd": "simulator_ui",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "simulator_ui (release mode)",
            "cwd": "simulator_ui",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ],
    "compounds": [
        {
            "name": "Ipe Launch Backend and UI",
            "configurations": ["Python: FastAPI Backend", "simulator_ui"]
        }
    ]
}