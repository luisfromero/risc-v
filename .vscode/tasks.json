{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "if exist build ( rmdir /s /q build )",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Configure C++ Core (CMake)",
            "type": "shell",
            "command": "cmake -S . -B build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Uvicorn",
            "type": "shell",
            "command": "powershell -Command \"Get-CimInstance Win32_Process | Where-Object { $_.CommandLine -like '*uvicorn*api.main:app*' } | ForEach-Object { Stop-Process -Id $_.ProcessId -Force }\"",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Compile C++ Core",
            "type": "shell",
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Start FastAPI Server",
            "type": "shell",
            "command": "python -m uvicorn api.main:app --host 0.0.0.0 --port 8070",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "uvicorn",
                    "pattern": [
                        {
                            "regexp": ".*"
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Uvicorn running on",
                        "endsPattern": "Shutting down"
                    }
                }
            ]
        },
        {
            "label": "API: Detener, Compilar y Reiniciar",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Stop Uvicorn",
                "Compile C++ Core",
                "Start FastAPI Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
