{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Stop Uvicorn",
            "type": "shell",
            // Este comando busca y detiene el proceso de uvicorn de forma segura.
            // Es para Windows (PowerShell). Si usas Linux/macOS, descomenta la otra línea.
            "command": "powershell -Command \"Get-CimInstance Win32_Process | Where-Object { $_.CommandLine -like '*uvicorn*api.main:app*' } | ForEach-Object { Stop-Process -Id $_.ProcessId -Force }\"",
            // "command": "pkill -f 'uvicorn api.main:app' || true", // Para Linux/macOS
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent", // No muestra la terminal para esta tarea
                "panel": "shared"
            }
        },
        {
            "label": "Compile C++ Core",
            "type": "shell",
            // Asume que tu carpeta de compilación se llama 'build'
            "command": "cmake --build build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Start FastAPI Server",
            "type": "shell",
            // Llama a python desde el entorno virtual para evitar problemas de activación.
            // Ajusta la ruta a tu venv si es diferente.
            // Para Windows:
            "command": ".\\api\\venv\\Scripts\\python.exe -m uvicorn api.main:app --host 0.0.0.0",
            // Para Linux/macOS:
            // "command": "./api/venv/bin/python -m uvicorn api.main:app --host 0.0.0.0",
            "options": {
                "cwd": "${workspaceFolder}" // Ejecuta desde la raíz del proyecto
            },
            "isBackground": true, // Permite que VS Code siga funcionando mientras el servidor corre
            "problemMatcher": [
                {
                    "owner": "uvicorn",
                    "pattern": [{ "regexp": ".*" }],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Uvicorn running on",
                        "endsPattern": "Shutting down"
                    }
                }
            ]
        },
        {
            "label": "API: Detener, Compilar y Reiniciar",
            "dependsOrder": "sequence", // Ejecuta las tareas en orden
            "dependsOn": [
                "Stop Uvicorn",
                "Compile C++ Core",
                "Start FastAPI Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Hace que esta sea la tarea de compilación por defecto (Ctrl+Shift+B)
            },
            "problemMatcher": []
        }
    ]
}
